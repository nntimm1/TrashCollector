<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Account.OneTimePickUp)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Account.OneTimePickUp)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Account.PickUpDay)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Account.PickUpDay)
    </dd>
</dl>
<div>
